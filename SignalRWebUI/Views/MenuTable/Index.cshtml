@model List<SignalRWebUI.Dtos.MenuTableDtos.ResultMenuTableDto>

@{
    Layout = "~/Views/AdminLayout/index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Masa Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">									
                            Masalar ile ilgili işlemleri aşşağıdan gerçekleştirebilirsinizi. Sadece 1 tane oluşturun!!
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Masa Adı</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                
                                <tr>
                                    <td>@item.MenuTableId</td>
                                    <td>@item.Name</td>
                                    <td>@item.Status</td>
                                    <td><a href="/MenuTable/DeleteMenuTable/@item.MenuTableId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/MenuTable/UpdateMenuTable/@item.MenuTableId" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <a href="/MenuTable/CreateMenuTable" class="btn btn-outline-dark">Masa Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>