@model SignalRWebUI.Dtos.ProductDtos.CreateProductDto

@{
    Layout = "~/Views/AdminLayout/index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Ürün Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="CategoryName">Ürün Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="ProductName" id="ProductName">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="CategoryName">Ürün Fiyatını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Price" id="Price">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="CategoryName">Ürün Görselini Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="CategoryName">Ürün Kategorisini Seçiniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="CategoryName">Ürün Açıklamasını Giriniz</label>
                                <input type="text" class="form-control" asp-for="ProductDescription" id="ProductDescription">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Ürünü ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>