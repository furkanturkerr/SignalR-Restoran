@model SignalRWebUI.Dtos.BookingDto.CreateBookingDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">

@await Component.InvokeAsync("_MenuNavbarComponetPartial")
  <section class="book_section layout_padding">
    <div class="container">
      <div class="heading_container">
        <h2>
          Rezervason Yap
        </h2>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form_container">
            <form method="post">
              <div>
                <input type="text" class="form-control" placeholder="Adınız Soyadınız" asp-for="Name" />
              </div>
              <div>
                <input type="text" class="form-control" placeholder="Telefon Numaranız" asp-for="Phone" />
              </div>
              <div>
                <input type="email" class="form-control" placeholder="Mail Adresiniz" asp-for="Mail" />
              </div>
              <div>
                <select asp-for="PersonCount" class="form-control nice-select wide">
                  <option value="" disabled selected>
                    Kaç Kişisiniz
                  </option>
                  <option value="1">
                    1
                  </option>
                  <option value="2">
                    2
                  </option>
                  <option value="3">
                    3
                  </option>
                  <option value="4">
                    4
                  </option>
                  <option value="5">
                    5
                  </option>
                  <option value="6">
                    6+
                  </option>
                </select>
              </div>
              <div>
                <input type="date" class="form-control" asp-for="Date">
              </div>
              <div class="btn_box">
                <button>
                  Yerinizi Ayırın
                </button>
              </div>
            </form>
          </div>
        </div>
        <div class="col-md-6">
          <div class="map_container ">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12167.163647501788!2d38.74111643782976!3d40.324797724994404!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x407b32ea544d8a57%3A0xbab93da8d81d6acd!2sVeysel%20Karani%2C%2028700%20Alucra%2FGiresun!5e0!3m2!1str!2str!4v1765911370090!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  @await Component.InvokeAsync("_UILayoutFooterComponentPartial")
  @await Component.InvokeAsync("_UILayoutScriptComponentPartial")

</body>

</html>