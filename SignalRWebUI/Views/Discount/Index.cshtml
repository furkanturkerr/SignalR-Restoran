@model List<SignalRWebUI.Dtos.DiscountDto.ResultDiscountDto>

@{
    Layout = "~/Views/AdminLayout/index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün indirimleri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Günün indirimleri Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">									
                            Günün indirimleri ile ilgili işlemleri aşşağıdan gerçekleştirebilirsiniz. Sadece 2 tane seçiniz!! 
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ürün</th>
                                <th scope="col">İndirim Oranı</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                
                                <tr>
                                    <td>@item.DiscountId</td>
                                    <td>@item.Title</td>
                                    <td>@item.Amount</td>
                                    @if (@item.Status == false)
                                    {
                                        <td><a href="/Discount/ChangeStatusTrue/@item.DiscountId" class="btn btn-outline-primary">Aktif Yap</a></td>
                                    }
                                    else
                                    {
                                        <td><a href="/Discount/ChangeStatusFalse/@item.DiscountId" class="btn btn-outline-warning">Pasif Yap</a></td>
                                    }
                                    <td><a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Discount/UpdateDiscount/@item.DiscountId" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <a href="/Discount/CreateDiscount" class="btn btn-outline-dark">Yeni İndirimli ürün Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>