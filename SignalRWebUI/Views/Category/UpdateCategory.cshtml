@model SignalRWebUI.Dtos.CategoryDtos.UpdateCategoryDto

@{
    Layout = "~/Views/AdminLayout/index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kategori Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="CategoryId">
                            <div class="form-group">
                                <label for="CategoryName">Kategori Adını Griniz</label>
                                <input type="text" class="form-control" asp-for="CategoryName" id="CategoryName">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Kategoriyi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
