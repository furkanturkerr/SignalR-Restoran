@model dynamic

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">

@await Component.InvokeAsync("_MenuNavbarComponetPartial")

<div class="food_section layout_padding">
    <div class="container">
		
        <script type="text/javascript">
			$(document).ready(() => {

				var connection = new signalR.HubConnectionBuilder().withUrl("http://localhost:5013/SignalRHub")
					.build();

				$("#constatus").text(connection.state);
				connection.start().then(() => {
					$("#connstatus").text(connection.state);
				}).catch((err) => {console.log(err)});

				connection.on("ReceiveClientCount", (value) => {
					$("#clientcount").text(value)
				});
				
			});
        </script>
        <h4 class="page-title">Anlık Client Sayısı</h4>
        <div id="clientcount"></div>
    </div>
</div>
@await Component.InvokeAsync("_UILayoutFooterComponentPartial")
@await Component.InvokeAsync("_UILayoutScriptComponentPartial")
</body>

</html>