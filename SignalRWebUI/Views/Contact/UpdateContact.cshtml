@model SignalRWebUI.Dtos.ContactDto.UpdateContactDto

@{
    Layout = "~/Views/AdminLayout/index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İletişim Güncelleme</div>
                        </div>
                        <input type="hidden" asp-for="ContactId">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Location">Konum Giriniz</label>
                                <input type="text" class="form-control" asp-for="Location" id="Location">
                            </div>
                            <div class="form-group">
                                <label for="PhoneNumber">Telefon Giriniz</label>
                                <input type="tel" class="form-control" asp-for="PhoneNumber" id="PhoneNumber">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Mail Giriniz</label>
                                <input type="email" class="form-control" asp-for="Mail" id="Mail">
                            </div>
                            <div class="form-group">
                                <label for="FooterDescription">Açıklama Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="FooterDescription" id="FooterDescription"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">İletişim Bilgilerini Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>