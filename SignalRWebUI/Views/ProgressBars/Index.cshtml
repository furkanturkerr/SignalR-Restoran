@model dynamic

@{
	Layout = "~/Views/AdminLayout/index.cshtml";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

<div class="content">
	<script type="text/javascript">
			$(document).ready(() => {

				var connection = new signalR.HubConnectionBuilder().withUrl("http://localhost:5013/SignalRHub")
					.build();

				$("#constatus").text(connection.state);
				connection.start().then(() => {
					$("#connstatus").text(connection.state);
					setInterval(() => {
						connection.invoke("SendProgress");
					}, 1000);
				}).catch((err) => {console.log(err)});

				connection.on("ReceiveMoneyCaseTotalPrice", (value6) => {
					$("#moneycasetotalprice").text(value6);
				})			
				
				connection.on("ReceiveMenuTableCount", (value6) => {
					$("#menutablecount").text(value6);
				})				
				
				connection.on("ReceiveActiveOrderCount", (value6) => {
					$("#ordercount").text(value6);
				})
				
			});
    </script>
