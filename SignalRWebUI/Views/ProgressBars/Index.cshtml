@model dynamic

@{
	Layout = "~/Views/AdminLayout/index.cshtml";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

<div class="content">
	<script type="text/javascript">
			$(document).ready(() => {

				var connection = new signalR.HubConnectionBuilder().withUrl("http://localhost:5013/SignalRHub")
					.build();

				$("#constatus").text(connection.state);
				connection.start().then(() => {
					$("#connstatus").text(connection.state);
					setInterval(() => {
						connection.invoke("SendProgress");
					}, 1000);
				}).catch((err) => {console.log(err)});

				connection.on("ReceiveMoneyCaseTotalPrice", (value6) => {
					$("#moneycasetotalprice").text(value6);
				})			
				
				connection.on("ReceiveMenuTableCount", (value6) => {
					$("#menutablecount").text(value6);
				})				
				
				connection.on("ReceiveActiveOrderCount", (value6) => {
					$("#ordercount").text(value6);
				})

				connection.on("ReceiveMenuTableCount", (value7) => {
					$("#totalMenuTableCount").empty();
					$("#totalMenuTableCount").append(`<div class="d-flex justify-content-between mb-1">
													<span class="text-muted">Toplam Masa Sayısı</span>
													<span class="text-muted fw-bold"> ${value7}</span>
													</div>
													<div class="progress mb-2" style="height: 7px;">
													<div class="progress-bar bg-success" role="progressbar" style="width: ${value7}%" aria-valuenow="${value7}" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value7}"></div>
													</div>

					`)
				})

				connection.on("ReceiveProductPriceAvg", (value8) => {
					$("#productpriceAvg").empty();
					$("#productpriceAvg").append(`<div class="d-flex justify-content-between mb-1">
													<span class="text-muted">Ortalama Ürün Fiyatı</span>
													<span class="text-muted fw-bold"> ${value8}</span>
													</div>
													<div class="progress mb-2" style="height: 7px;">
													<div class="progress-bar bg-primary" role="progressbar" style="width: ${value8}%" aria-valuenow="${value8}" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value8}%"></div>
													</div>

					`)
				})

				connection.on("ReceiveProductPriceByHamburger", (value8) => {
					$("#avghamburger").empty();
					$("#avghamburger").append(`<div class="d-flex justify-content-between mb-1">
													<span class="text-muted">Ortalama Hamburger Fiyatı</span>
													<span class="text-muted fw-bold"> ${value8}</span>
													</div>
													<div class="progress mb-2" style="height: 7px;">
													<div class="progress-bar bg-warning" role="progressbar" style="width: ${value8}%" aria-valuenow="${value8}" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value8}%"></div>
													</div>

					`)
				})

				connection.on("ReceiveProductCountByCategoryNameDrink", (value8) => {
					$("#drinkcount").empty();
					$("#drinkcount").append(`<div class="d-flex justify-content-between mb-1">
													<span class="text-muted">İçecek Kategori Sayısı</span>
													<span class="text-muted fw-bold"> ${value8}</span>
													</div>
													<div class="progress mb-2" style="height: 7px;">
													<div class="progress-bar bg-warning" role="progressbar" style="width: ${value8}%" aria-valuenow="${value8}" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value8}%"></div>
													</div>

					`)
				})

				connection.on("ReceiveTotalOrder", (value8) => {
					$("#orderscount").empty();
					$("#orderscount").append(`<div class="d-flex justify-content-between mb-1">
													<span class="text-muted">Toplam Sipariş Sayısı</span>
													<span class="text-muted fw-bold"> ${value8}</span>
													</div>
													<div class="progress mb-2" style="height: 7px;">
													<div class="progress-bar bg-dark" role="progressbar" style="width: ${value8}%" aria-valuenow="${value8}" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value8}%"></div>
													</div>

					`)
				})

				connection.on("Recivecategorycount", (value9) => {
					$("#categorycount").text(value9);
				})
				
				connection.on("RecivecaLastOrderTotalPrice", (value9) => {
					$("#lastordertotal").text(value9);
				})			
				
				connection.on("ReceiveProductPriceAvgs", (value9) => {
					$("#avgOrderprice").text(value9);
				})
			});
    </script>
	<div class="container-fluid">
		<h4 class="page-title">Admin İstatistikler & Durumlar</h4>
		<div class="row row-card-no-pd">
			<div class="col-md-4">
				<div class="card">
					<div class="card-body">
						<p class="fw-bold mt-1">Kasadaki Toplam Tutar</p>
						<h4 id="moneycasetotalprice"></h4>
						<hr />
						<p class="fw-bold mt-1">Ortalama Ürün Fiyatı</p>
						<h4 id="avgOrderprice"></h4>
						<hr />
						<p class="fw-bold mt-1">Son Sipariş Tutarı</p>
						<h4 id="lastordertotal"></h4>

						<a href="/Order/CreateOrder/" class="btn btn-primary btn-full text-left mt-3 mb-3"><i class="la la-plus"></i> Yeni Sipariş</a>
					</div>
				</div>
			</div>
			<div class="col-md-5">
				<div class="card">
					<div class="card-body">
						<div class="progress-card" id="totalMenuTableCount"></div>
						
						<div class="progress-card" id="productpriceAvg"></div>
						
						<div class="progress-card" id="avghamburger"></div>
						
						<div class="progress-card" id="drinkcount"></div>
						
						<div class="progress-card" id="orderscount"></div>
						
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="card card-stats">
					<div class="card-body">
						<p class="fw-bold mt-1">İstatistik</p>
						<div class="row">
							<div class="col-5">
								<div class="icon-big text-center icon-warning">
									<i class="la la-pie-chart text-warning"></i>
								</div>
							</div>
							<div class="col-7 d-flex align-items-center">
								<div class="numbers">
									<p class="card-category">Aktif Sipariş Sayısı</p>
									<h4 class="card-title" id="ordercount"></h4>
								</div>
							</div>
						</div>
						<hr/>
						<div class="row">
							<div class="col-5">
								<div class="icon-big text-center">
									<i class="la la-heart-o text-primary"></i>
								</div>
							</div>
							<div class="col-7 d-flex align-items-center">
								<div class="numbers">
									<p class="card-category">Masa Sayısı</p>
									<h4 class="card-title" id="menutablecount"></h4>
								</div>
							</div>
						</div>
						<hr/>
						<div class="row">
							<div class="col-5">
								<div class="icon-big text-center">
									<i class="la la-car text-success"></i>
								</div>
							</div>
							<div class="col-7 d-flex align-items-center">
								<div class="numbers">
									<p class="card-category">Kategori Sayısı</p>
									<h4 class="card-title" id="categorycount"></h4>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>