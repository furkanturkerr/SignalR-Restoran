		<script type="text/javascript">
			$(document).ready(() => {

				var connection = new signalR.HubConnectionBuilder().withUrl("http://localhost:5013/SignalRHub")
					.build();

				$("#constatus").text(connection.state);
				connection.start().then(() => {
					$("#connstatus").text(connection.state);
					setInterval(() => {
						connection.invoke("SendStatistic");
					}, 1000);
				}).catch((err) => {console.log(err)});

				connection.on("ReceiveProductCount", (value1) => {
					$("#productcount").text(value1);
				});

				connection.on("ReceiveCategoryCount", (value2) => {
					$("#categorycount").text(value2);
				});

				connection.on("ReceiveActiveCategoryCount", (value3) => {
					$("#activecategorycount").text(value3);
				});

				connection.on("ReceivePassiveCategoryCount", (value4) => {
					$("#passivecategorycount").text(value4);
				});
				
				connection.on("ReceiveProductCountByHamburger", (value5) => {
					$("#hamburger").text(value5);
				});

				connection.on("ReceiveProductCountDrink", (value5) => {
					$("#drink").text(value5);
				});

				connection.on("ReceiveProductPriveAvg", (value5) => {
					$("#ProductPriveAvg").text(value5);
				});
				
				connection.on("ReceiveProductNameByPriceMax", (value6) => {
					$("#producnamebypricemax").text(value6);
				})

				connection.on("ReceiveProductNameByPriceMin", (value6) => {
					$("#producnamebypricemin").text(value6);
				})

				connection.on("ReceiveProductPriceByHamburger", (value6) => {
					$("#productpricebyhamburger").text(value6);
				})

				connection.on("ReceiveTotalOrderCount", (value6) => {
					$("#totalordercount").text(value6);
				})				
				
				connection.on("ReceiveLastOrderTotalPrice", (value6) => {
					$("#lastoorderprice").text(value6);
				})

				connection.on("ReceiveActiveOrderCount", (value6) => {
					$("#activelordercount").text(value6);
				})

				connection.on("ReceiveMoneyCaseTotalPrice", (value6) => {
					$("#moneycase").text(value6);
				})

				connection.on("ReceiveMenuTableCount", (value6) => {
					$("#tablecount").text(value6);
				})
				
			});
        </script>
